<script>
function abrirModal(produto, preco){
  document.getElementById('modalProduto').innerText = produto;
  document.getElementById('modalPreco').innerText = preco;
  document.getElementById('modal').style.display = 'flex';
}
function fecharModal(){
  document.getElementById('modal').style.display = 'none';
}
function copiarPix(){
  const pix = "55999231517";
  const produto = document.getElementById('modalProduto').innerText;
  const preco = document.getElementById('modalPreco').innerText;
  navigator.clipboard.writeText(`PIX: ${pix}\nProduto: ${produto}\nPreÃ§o: ${preco}`).then(()=>{
    alert('PIX copiado! Cole no chat com o comprador.');
  });
}
</script>


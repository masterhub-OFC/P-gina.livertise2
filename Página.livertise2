<!DOCTYPE html>
<html lang="pt-BR">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Loja Master Vendas</title>
<style>
body { font-family: Arial, sans-serif; background:#f5f5f5; margin:0; padding:0; }
header { background:#000; color:#fff; padding:20px; text-align:center; }
header h1 { margin:0; }
main { display:grid; grid-template-columns:repeat(auto-fit,minmax(200px,1fr)); gap:20px; padding:20px; }
.produto { background:#fff; border-radius:10px; padding:15px; text-align:center; box-shadow:0 0 10px rgba(0,0,0,0.1); }
.produto h2 { font-size:18px; margin:10px 0 5px; }
.produto p { font-size:14px; color:#333; margin:5px 0; }
.preco { font-weight:bold; margin:10px 0; }
button.comprar { background:#28a745; color:#fff; border:none; padding:10px; border-radius:5px; cursor:pointer; width:100%; }
button.comprar:hover { background:#218838; }
footer { background:#222; color:#fff; text-align:center; padding:10px; margin-top:20px; }
.modal { display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.5); justify-content:center; align-items:center; }
.modal-content { background:#fff; padding:20px; border-radius:10px; width:90%; max-width:400px; text-align:center; }
.modal-content p { margin:10px 0; }
button#confirmar { background:#000; color:#fff; padding:10px 20px; border:none; border-radius:5px; cursor:pointer; }
</style>
</head>
<body>

<header>
<h1>Master Vendas</h1>
<p>Compre seus produtos de forma rápida e segura</p>
</header>

<main id="produtos"></main>

<footer>
<p>© 2025 Master Vendas. Todos os direitos reservados.</p>
</footer>

<div id="modal" class="modal">
<div class="modal-content">
<p id="pixInfo"></p>
<button id="confirmar" onclick="confirmarPagamento()">Confirmar Pagamento</button>
</div>
</div>

<script>
const produtos = [
{name:"Chicleteira Bisicletera", preco:25.00, descricao:"Produto exclusivo da loja"},
{name:"Las Vaquitas", preco:40.00, descricao:"Produto especial da coleção"},
{name:"Tralalerita Tralala", preco:35.00, descricao:"Item divertido e único"},
{name:"Los Orcalelitos", preco:50.00, descricao:"Produto raro da coleção"},
{name:"Bombardine Tortini", preco:45.00, descricao:"Delícia especial e exclusiva"},
{name:"Tigroline Frutoline", preco:4.00, descricao:"Sabor frutado e único"},
{name:"Estatutino Libertino", preco:7.00, descricao:"Produto exclusivo e colecionável"},
{name:"Los Tungtungsitos", preco:8.00, descricao:"Item divertido e colecionável"},
{name:"Tigroline Frutolline (Gold)", preco:4.30, descricao:"Edição Gold especial"},
{name:"Chipanzine Spiderini", preco:10.00, descricao:"Item raro e divertido"},
{name:"Kar Ker Kar Kur Kur", preco:5.00, descricao:"Produto especial"},
{name:"Espesso Signora (Gold)", preco:6.00, descricao:"Edição Gold premium"},
{name:"Kar Ker Kar Kur Kur (Meteoro)", preco:5.30, descricao:"Produto especial Meteoro"}
];

const container = document.getElementById("produtos");

produtos.forEach(p => {
    const div = document.createElement("div");
    div.className="produto";
    div.innerHTML = `
        <h2>${p.name}</h2>
        <p>${p.descricao}</p>
        <p class="preco">R$ ${p.preco.toFixed(2)}</p>
        <button class="comprar" onclick="abrirPix('${p.name}')">Comprar</button>
    `;
    container.appendChild(div);
});

const modal = document.getElementById("modal");
const pixInfo = document.getElementById("pixInfo");
let produtoAtual="";

function abrirPix(nome){
    produtoAtual = nome;
    pixInfo.innerHTML = `Chave Pix: <b>55999231517</b><br>Produto: <b>${nome}</b><br>Efetue o pagamento e aguarde a confirmação.`;
    modal.style.display="flex";
}

function confirmarPagamento(){
    alert(`Pagamento confirmado! Envie o produto "${produtoAtual}" ao cliente.`);
    modal.style.display="none";
}

// Fecha modal ao clicar fora
window.onclick = function(event){
    if(event.target == modal){ modal.style.display="none"; }
}
</script>

</body>
</html>
